{
  "manifest_version": 2,
  "name": "Scrive",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "0.7.2",
  "icons": {
    "16": "img/icon-16x16.png",
    "48": "img/icon-48x48.png",
    "128": "img/icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/**", "http://*/**"],
      "css": ["css/popupdiv.css"],
      "js": ["constants.js",
            "common/ScrivePlatform.js",
            "common/ScriveLogUtils.js",
            "chrome/ScriveChromeLogger.js",
            "content_script.js",
            "libs/mixpanel_init.js",
            "show_error.js",
            "popup.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "html/options.html", "html/direct_upload.html"
  ],
  "browser_action": {
    "default_icon": "img/icon-38x38.png",
    "default_title": "__MSG_browserAction__"//,
    //"default_popup": "html/popup.html"
  },
  "permissions": [
    "webRequest", "webRequestBlocking",
    "tabs", "*://*/*", "storage"
  ],
  "options_page": "html/options.html"
}
